<idea-plugin>
    <id>dev.ekvedaras.intellijilluminatequerybuilderintegration</id>
    <name>Illuminate Query Builder Integration</name>
    <vendor email="kvedarasernestas@gmail.com" url="https://ekvedaras.github.io">Ernestas Kvedaras</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
            serviceImplementation="dev.ekvedaras.intellijilluminatequerybuilderintegration.services.MyApplicationService"/>
        <projectService
            serviceImplementation="dev.ekvedaras.intellijilluminatequerybuilderintegration.services.MyProjectService"/>

        <completion.contributor language="PHP"
                                implementationClass="dev.ekvedaras.intellijilluminatequerybuilderintegration.completion.TableOrViewCompletionContributor"/>
        <completion.contributor language="PHP"
                                implementationClass="dev.ekvedaras.intellijilluminatequerybuilderintegration.completion.ColumnCompletionContributor"/>

        <psi.referenceContributor language="PHP"
                                  implementation="dev.ekvedaras.intellijilluminatequerybuilderintegration.reference.TableOrViewReferenceContributor"/>
        <psi.referenceContributor language="PHP"
                                  implementation="dev.ekvedaras.intellijilluminatequerybuilderintegration.reference.ColumnReferenceContributor"/>

        <localInspection language="PHP"
                         groupPath="PHP"
                         groupKey="databaseGroupName"
                         shortName="UnknownTableOrViewInspection"
                         enabledByDefault="true"
                         bundle="messages.MyBundle"
                         key="unknownTableOrViewDisplayName"
                         implementationClass="dev.ekvedaras.intellijilluminatequerybuilderintegration.inspection.UnknownTableOrViewInspection"
        />
        <localInspection language="PHP"
                         groupPath="PHP"
                         groupKey="databaseGroupName"
                         shortName="UnknownColumnInspection"
                         enabledByDefault="true"
                         bundle="messages.MyBundle"
                         key="unknownColumnDisplayName"
                         implementationClass="dev.ekvedaras.intellijilluminatequerybuilderintegration.inspection.UnknownColumnInspection"
        />
    </extensions>


    <applicationListeners>
    </applicationListeners>
</idea-plugin>
